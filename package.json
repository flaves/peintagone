{
  "name": "peintagone",
  "private": true,
  "description": "Peintagone workspace",
  "version": "0.1.0",
  "author": "Sebastien Crepin <sebastien@flav.es>",
  "dependencies": {
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/core": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "commitizen": "^4.2.3",
    "commitlint-config-gitmoji": "^1.1.0",
    "cz-emoji": "^1.3.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "npm-check-updates": "^10.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "workspaces": [
    "projects/*"
  ],
  "license": "MIT",
  "scripts": {
    "namur-develop": "yarn workspace namur develop",
    "namur-build": "yarn workspace namur build",
    "website-develop": "yarn workspace website develop",
    "website-build": "yarn workspace website build",
    "update": "ncu -u",
    "lint": "yarn workspaces run lint",
    "format": "yarn workspaces run format"
  },
  "lint-staged": {
    "projects/**/**/*.{ts,js,jsx,tsx}": [
      "npm run format",
      "npm run lint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flaves/peintagone"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    }
  }
}
